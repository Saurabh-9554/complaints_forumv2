<% layout("layouts/boilerplate.ejs") -%>

    <div class="row lgb">
        <h1 class="text-center">Login</h1>
        <div class="col-6 offset-3">
            <form class="needs-validation fmlg" action="/login" method="POST" novalidate>
                <div class="mb-3 fmus">
                    <label class="form-label" for="username" ></label>
                    <input class="form-control user" type="text" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="mb-3 fmpw">
                    <label class="form-label" for="password"></label>
                    <input class="form-control pass" type="password" id="password" name="password"   placeholder="Password"  required>
                </div>
                <div class="mb-3 ">
                    <button class="btn btn-success fmbt">Login</button>
                </div>
            </form>
        </div>
    </div>